        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// Check Date user has entered for When Needed and abort if it's in the past
	
	var user_date = new GlideDateTime(current.u_when_needed);
	var today = new GlideDateTime();
	
	if(user_date.before(today)){
		gs.addErrorMessage("When Needed cannot be in the past.");
		current.setAbortAction(true);
	}
	
	var request_date = new GlideDateTime(user_date.getLocalDate());
	var todays_date = new GlideDateTime(today.getLocalDate());
	
	if(request_date.compareTo(todays_date) == 0){
		gs.addErrorMessage("Please give us at least 1 business day to fulfill your request.");
		current.setAbortAction(true);
	}

	
})(current, previous);]]></script>
